@using Minible5.Models.ViewModels.Empresas
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/_Shared/_BlankLayout.cshtml";
    List<TableCompaniesViewModel> Companies = (List<TableCompaniesViewModel>)ViewBag.companies;
}

<body class="authentication-bg">

    <div class="home-btn d-none d-sm-block">
        <a href=@Url.Action("Index", "index") class="text-dark"><i class="mdi mdi-home-variant h2"></i></a>
    </div>
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <a href=@Url.Action("Index", "index") class="mb-5 d-block auth-logo">
                            <img src="~/assets/images/logo-dark.png" alt="" height="22" class="logo logo-dark">
                            <img src="~/assets/images/logo-light.png" alt="" height="22" class="logo logo-light">
                        </a>
                    </div>
                </div>
            </div>
            <div class="row align-items-center justify-content-center">
                <div class="row">
                    @foreach (var company in Companies)
                    {
                        <div class="col-xl-3 col-sm-6">
                            <div class="card text-center">
                                <div class="card-body">
                                    <div class="dropdown float-end">
                                        <a class="text-body dropdown-toggle font-size-16" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true">
                                            <i class="uil uil-ellipsis-h"></i>
                                        </a>

                                        <div class="dropdown-menu dropdown-menu-end">
                                            <a class="dropdown-item" href="#">Edit</a>
                                            <a class="dropdown-item" href="#">Action</a>
                                            <a class="dropdown-item" href="#">Remove</a>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="mb-4">
                                        <img src="~/assets/images/users/avatar-2.jpg" alt="" class="avatar-lg rounded-circle img-thumbnail">
                                    </div>
                                    <h5 class="font-size-16 mb-1"><a href="#" class="text-dark">@company.nombre</a></h5>
                                    <p class="text-muted mb-2">@company.direccion</p>

                                </div>

                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Select", "AuthCompany")?id=@company.IdInternoSecurityCompany" type="button" class="btn btn-outline-light text-truncate"><i class="uil uil-key-skeleton me-1"></i> Ingresar</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- end row -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>

    @section scripts{
        <!-- JAVASCRIPT -->
        <script src="~/assets/libs/jquery/jquery.min.js"></script>
        <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
        <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
        <script src="~/assets/libs/node-waves/waves.min.js"></script>
        <script src="~/assets/libs/waypoints/lib/jquery.waypoints.min.js"></script>
        <script src="~/assets/libs/jquery.counterup/jquery.counterup.min.js"></script>

        <script src="~/assets/js/app.js"></script>
    }
    </body>

