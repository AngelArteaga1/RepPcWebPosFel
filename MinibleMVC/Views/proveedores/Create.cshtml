                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(d => d.personaContacto1)
                                        @Html.TextBoxFor(d => d.personaContacto1, new { @class = "form-control", placeholder = "Persona Contacto 1" })
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->

                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(d => d.personaContacto2)
                                        @Html.TextBoxFor(d => d.personaContacto2, new { @class = "form-control", placeholder = "Persona Contacto 2" })
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(d => d.diasProntoPago)
                                        @Html.TextBoxFor(d => d.diasProntoPago, new { @class = "form-control", placeholder = "Dias Pronto Pago" })
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->

                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(d => d.descProntoPago)
                                        @Html.TextBoxFor(d => d.descProntoPago, new { @class = "form-control", placeholder = "Descuento Pronto Pago" })
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(d => d.idCuenta)
                                        @Html.TextBoxFor(d => d.idCuenta, new { @class = "form-control", placeholder = "Cuenta Contable" })
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->

                            <br />
