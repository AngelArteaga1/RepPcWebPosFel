                            <!-- /.row -->

                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(d => d.apartadoPostal)
                                        @Html.TextBoxFor(d => d.apartadoPostal, new { @class = "form-control", placeholder = "Codigo de barras" })
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(d => d.cedula)
                                        @Html.TextBoxFor(d => d.cedula, new { @class = "form-control", placeholder = "DPI" })
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->

                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(d => d.nit)
                                        @Html.TextBoxFor(d => d.nit, new { @class = "form-control", placeholder = "Nit" })
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(d => d.fechaAlta)
                                        @Html.TextBoxFor(d => d.fechaAlta, "{0:yyyy-MM-dd}", new { @class = "form-control", placeholder = "Fecha alta", @type = "date" })
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->

                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(d => d.diasCredito)
