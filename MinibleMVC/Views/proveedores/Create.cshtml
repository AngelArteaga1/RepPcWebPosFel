                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(d => d.email)
                                        @Html.TextBoxFor(d => d.email, new { @class = "form-control", placeholder = "Correo Electronico" })
                                    </div>
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->

                            <br />
                            <div class="row">
                                <div class="col-md-6">
